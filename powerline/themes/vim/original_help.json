{
    "alt-dividers": {
        "left": {
            "hard": "",
            "soft": ""
        },
        "right": {
            "hard": "",
            "soft": ""
        }
    },
    "dividers": {
        "left": {
            "hard": "  ",
            "soft": "  "
        },
        "right": {
            "hard": " ",
            "soft": " "
        }
    },
    "spaces": 1,
    "segments": {
        "left": [
            {
                "type": "string",
                "name": "buffer_name",
                "contents": "[Help]",
                "highlight_groups": ["single_tab"]
            },
            {
                "function": "file_name"
            },
            {
                "type": "string",
                "highlight_groups": ["background"],
                "draw_soft_divider": false,
                "draw_hard_divider": false,
                "width": "auto"
            }
        ],
        "right": [
            {
                "function": "line_percent",
                "args": {
                    "gradient": true
                },
                "width": 4,
                "before": "↓",
                "after": "%",
                "align": "r"
            },
            {
                "function": "line_current",
                "draw_soft_divider": false,
                "width": 3,
                "before": "↕",
                "align": "r"
            }
        ]
    }
}
